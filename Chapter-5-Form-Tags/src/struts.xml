    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />

    <package name="stuff" extends="struts-default">

        <action name="CheckBox" class="stuff.CheckBoxTestAction">
            <result>/jsp/CheckBox.jsp</result>
        </action>

        <action name="CheckBox2" class="stuff.CheckBoxTest2Action">
            <result>/jsp/CheckBox2.jsp</result>
        </action>

        <action name="CheckBoxList" class="stuff.CheckBoxListTestAction">
            <result>/jsp/CheckBoxList.jsp</result>
        </action>

        <action name="ComboBox" class="stuff.ComboBoxTestAction">
            <result>/jsp/ComboBox.jsp</result>
        </action>

        <action name="DoubleSelect" class="stuff.DoubleSelectTestAction">
            <result>/jsp/DoubleSelect.jsp</result>
        </action>

        <action name="Label">
            <result>/jsp/Label.jsp</result>
        </action>

        <action name="OptGroup" class="stuff.OptGroupTestAction">
            <result>/jsp/OptGroup.jsp</result>
        </action>

        <action name="OptionTransferSelect" class="stuff.OptionTransferSelectTestAction">
            <result>/jsp/OptionTransferSelect.jsp</result>
        </action>

        <action name="Radio" class="stuff.RadioTestAction">
            <result>/jsp/Radio.jsp</result>
        </action>

        <action name="Select" class="stuff.SelectTestAction">
            <result>/jsp/Select.jsp</result>
        </action>

        <action name="TextField" class="stuff.TextFieldTestAction">
            <result>/jsp/TextField.jsp</result>
        </action>

        <action name="TextArea" class="stuff.TextAreaTestAction">
            <result>/jsp/TextArea.jsp</result>
        </action>

        <action name="UpDownSelect" class="stuff.UpDownSelectTestAction">
            <result>/jsp/UpDownSelect.jsp</result>
        </action>
    </package>
</struts>
